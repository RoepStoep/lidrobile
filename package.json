{
    "name": "lidrobile",
    "version": "1.3.0",
    "description": "lidraughts.org mobile application",
    "main": "app.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/RoepStoep/lidrobile.git"
    },
    "keywords": [
        "lidraughts",
        "draughts",
        "application",
        "mobile",
        "realtime",
        "android",
        "ios"
    ],
    "author": "Stefan Schermann (forked from https://github.com/veloce/lichobile by Vincent Velociter)",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/RoepStoep/lidrobile/issues"
    },
    "homepage": "https://github.com/RoepStoep/lidrobile",
    "browserslist": "and_chr >= 58, ios_saf >= 11",
    "devDependencies": {
        "@babel/preset-env": "7.6.2",
        "@types/jest": "24.0.11",
        "babel-plugin-transform-remove-console": "6.9.4",
        "concurrently": "5.0.0",
        "jest": "24.7.1",
        "mustache": "3.1.0",
        "ncp": "2.0.0",
        "rollup": "1.23.1",
        "rollup-plugin-commonjs": "10.1.0",
        "rollup-plugin-json": "4.0.0",
        "rollup-plugin-node-resolve": "5.2.0",
        "rollup-plugin-terser": "5.1.2",
        "tslint": "5.8.0",
        "typescript": "3.4.5",
        "vinyl-buffer": "1.0.1",
        "vinyl-source-stream": "2.0.0",
        "whatwg-fetch": "3.0.0"
    },
    "dependencies": {
        "@capacitor/android": "1.2.1",
        "@capacitor/cli": "1.2.1",
        "@capacitor/core": "1.2.1",
        "@capacitor/ios": "1.2.1",
        "@types/d3": "4.5.0",
        "@types/hammerjs": "2.0.35",
        "@types/lodash-es": "4.17.3",
        "@types/mithril": "2.0.0",
        "autoprefixer-stylus": "1.0.0",
        "capacitor-cordova-plugin-stockfish": "git+https://github.com/veloce/cordova-plugin-stockfish.git#capacitor",
        "capacitor-sound-effect": "file:../capacitor-sound-effect",
        "cordova-plugin-fullscreen": "1.2.0",
        "cordova-plugin-insomnia": "4.2.0",
        "cordova-plugin-scan": "git+https://github.com/RoepStoep/cordova-plugin-scan.git#48ecf95",
        "cordova-plugin-webview-checker": "1.0.1",
        "d3-axis": "1.0.8",
        "d3-scale": "1.0.6",
        "d3-selection": "1.1.0",
        "d3-shape": "1.2.0",
        "d3-time": "1.0.7",
        "d3-time-format": "2.0.5",
        "hammerjs": "2.0.8",
        "localforage": "1.5.5",
        "lodash": "4.17.15",
        "lodash-es": "4.17.15",
        "mithril": "2.0.4",
        "moment": "2.22.2",
        "onesignal-cordova-plugin": "2.11.3",
        "rlite-router": "1.1.3",
        "siema": "1.5.1",
        "signals": "1.0.0",
        "stylus": "0.54.7",
        "zanimo": "git+https://github.com/veloce/Zanimo.git"
    },
    "scripts": {
        "start": "npm run compile && npm run watch",
        "version": "node scripts/bump_version.js",
        "lint": "tslint --project tsconfig.json -e '**/dts/**' -e '**/*.js'",
        "test": "jest",
        "styles": "stylus -q -u autoprefixer-stylus src/styl/index.styl -c -o www/css/compiled/app.css",
        "styles-watch": "stylus -w -q -u autoprefixer-stylus src/styl/index.styl -o www/css/compiled/app.css",
        "compile": "tsc --outDir build/",
        "compile-watch": "tsc -w --outDir build/",
        "web-build": "npm run compile && rollup -c",
        "web-watch": "rollup -w -c",
        "watch": "node scripts/process_html && concurrently 'npm:compile-watch' 'npm:web-watch' 'npm:styles-watch'",
        "prebuild": "npm run lint && npm run test",
        "build": "node scripts/process_html && concurrently 'npm:styles' 'npm:web-build'"
    },
    "cordova": {
        "platforms": [],
        "plugins": {
            "cordova-plugin-insomnia": {},
            "cordova-plugin-fullscreen": {},
            "onesignal-cordova-plugin": {},
            "com.rjfun.cordova.plugin.lowlatencyaudio": {},
            "cordova-plugin-scan": {},
            "cordova-plugin-webview-checker": {}
        }
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "<rootDir>/testPreprocessor.js"
        },
        "testMatch": [
            "**/__tests__/*.(ts|tsx|js)"
        ],
        "verbose": true
    }
}
