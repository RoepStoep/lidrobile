{
    "name": "lidrobile",
    "version": "7.0.5",
    "description": "lidraughts.org mobile application",
    "repository": {
        "type": "git",
        "url": "https://github.com/RoepStoep/lidrobile.git"
    },
    "keywords": [
        "lidraughts",
        "draughts",
        "application",
        "mobile",
        "realtime",
        "android",
        "ios"
    ],
    "author": "Stefan Schermann (forked from https://github.com/veloce/lichobile by Vincent Velociter)",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/RoepStoep/lidrobile/issues"
    },
    "homepage": "https://github.com/RoepStoep/lidrobile",
    "engines": {
        "node": "^14.17",
        "npm": "^6.14"
    },
    "browserslist": "and_chr >= 69, ios_saf >= 12",
    "devDependencies": {
        "@rollup/plugin-commonjs": "12.0.0",
        "@rollup/plugin-json": "4.0.3",
        "@rollup/plugin-node-resolve": "8.0.0",
        "@rollup/plugin-strip": "1.3.3",
        "@types/jest": "24.0.11",
        "autoprefixer-stylus": "1.0.0",
        "concurrently": "5.0.0",
        "http-server": "0.12.0",
        "jest": "24.7.1",
        "jetifier": "1.6.5",
        "mustache": "3.1.0",
        "rimraf": "3.0.2",
        "rollup": "2.10.9",
        "rollup-plugin-terser": "7.0.2",
        "rollup-plugin-visualizer": "4.0.4",
        "stylus": "0.54.7",
        "tslint": "5.8.0",
        "typescript": "4.1.2",
        "whatwg-fetch": "3.0.0"
    },
    "dependencies": {
        "@badrap/result": "0.2.6",
        "@capacitor-community/keep-awake": "2.1.0",
        "@capacitor/android": "3.1.2",
        "@capacitor/app": "1.0.2",
        "@capacitor/browser": "1.0.2",
        "@capacitor/cli": "3.1.2",
        "@capacitor/clipboard": "1.0.2",
        "@capacitor/core": "3.1.2",
        "@capacitor/device": "1.0.2",
        "@capacitor/dialog": "1.0.2",
        "@capacitor/filesystem": "1.0.2",
        "@capacitor/haptics": "1.0.2",
        "@capacitor/ios": "3.1.2",
        "@capacitor/keyboard": "1.0.2",
        "@capacitor/network": "1.0.2",
        "@capacitor/push-notifications": "1.0.3",
        "@capacitor/share": "1.0.3",
        "@capacitor/splash-screen": "1.1.0",
        "@capacitor/status-bar": "1.0.2",
        "@capacitor/storage": "1.0.3",
        "@capacitor/toast": "1.0.2",
        "@types/d3": "4.5.0",
        "@types/lodash-es": "4.17.3",
        "@types/mithril": "2.0.0",
        "capacitor-cordova-plugin-scan": "git+https://github.com/RoepStoep/cordova-plugin-scan.git#capacitor",
        "capacitor-sound-effect": "1.0.1",
        "capacitor-stockfish": "git+https://github.com/veloce/capacitor-stockfish.git#capacitor3",
        "d3-axis": "1.0.8",
        "d3-scale": "1.0.6",
        "d3-selection": "1.1.0",
        "d3-shape": "1.2.0",
        "d3-time": "1.0.7",
        "d3-time-format": "2.0.5",
        "date-fns": "2.14.0",
        "lodash-es": "4.17.15",
        "mithril": "git+https://github.com/veloce/mithril.js.git#next",
        "rlite-router": "1.1.3",
        "signals": "1.0.0"
    },
    "scripts": {
        "start": "npm run compile && concurrently 'npm run watch' 'npm run serve'",
        "serve": "http-server -p 8080 -s -g -c-1 .",
        "version": "node scripts/bump-version.js",
        "lint": "tslint --project tsconfig.json -e '**/dts/**' -e '**/*.js'",
        "test": "jest",
        "i18n-update": "rimraf www/i18n/*.js && cd scripts && npm run i18n-update",
        "compile-date-locales": "node scripts/compile-date-locales",
        "styles": "stylus -q -u autoprefixer-stylus src/styl/index.styl -c -o www/css/compiled/app.css",
        "styles-watch": "stylus -w -q -u autoprefixer-stylus src/styl/index.styl -o www/css/compiled/app.css",
        "compile": "tsc --outDir build/",
        "compile-watch": "tsc -w --outDir build/",
        "web-clean": "rimraf www/*.js && rimraf www/*.js.map",
        "web-build": "npm run web-clean && npm run compile && rollup -c",
        "web-watch": "npm run web-clean && rollup -w -c",
        "watch": "node scripts/inject-conf && concurrently 'npm:compile-watch' 'npm:web-watch' 'npm:styles-watch'",
        "prebuild": "npm run web-clean",
        "build": "node scripts/inject-conf && concurrently 'npm:compile-date-locales' 'npm:styles' 'npm:web-build' && npx cap copy",
        "run-android": "npm run build && cd android && ./gradlew installDebug"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "<rootDir>/testPreprocessor.js"
        },
        "testMatch": [
            "**/__tests__/*.(ts|tsx|js)"
        ],
        "verbose": true
    }
}
