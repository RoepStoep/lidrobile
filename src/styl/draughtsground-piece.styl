.mode_facing.opponent piece,
#page.white .mode_flip.turn_black piece,
#page.black .mode_flip.turn_white piece
  transform rotate(180deg)

/* wide_crown */
.wide_crown piece
  &.man
    &.white
      background-image url('../../images/pieces/wide_crown/wP.svg')
    &.black
      background-image url('../../images/pieces/wide_crown/bP.svg')
  &.king
    &.white
      background-image url('../../images/pieces/wide_crown/wB.svg')
    &.black
      background-image url('../../images/pieces/wide_crown/bB.svg')

