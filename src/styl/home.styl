.home
  padding-top 5px
  >.stats
    margin-top 1em
    padding 0px 10px
    font-size 1em
    width 100%
    display flex
    flex-flow row nowrap
    justify-content space-between
    > div
      flex 0 1 auto
  .tabs-view-wrapper
    height calc(((100vw * 0.85 - 40px) * 0.28) * 3 + 40px)
    background-image url("data:image/svg+xml;base64,")
    background-repeat no-repeat
    background-size 100% 100%
  .newGame-pools
    padding 10px
    > .newGame-pool
      box-shadow none
      height calc((100vw * 0.85 - 40px) * 0.28)
      background-color transpWhite01
      border 1px solid lighten(#3d3d3d, 20%)
      color inherit
      &:nth-child(7), &:nth-child(8), &:nth-child(9)
        margin-bottom 0
      &.active
        background-color rgba(gold, 0.3)

.tabs-navigation.homeSetup
  height 35px
  > .tab-button
    text-transform initial

.homeCreate
  margin-bottom 0.5em

.homeTournament
  margin-top 1em
  padding 0px
  >.tournamentList
    >.tournament_item
      padding 10px

.home_start
  display flex
  flex-flow column nowrap
  justify-content stretch
  margin 0 1em

.homeTitle
  font-weight bold
  text-align center
  margin 10px 0 5px

.homeOfflineWrapper
  flex-grow 1
  display flex
  flex-flow column nowrap
  &.withBoard
    display initial

.homeOffline
  flex-grow 1
  display flex
  flex-flow column nowrap
  justify-content center
  h2
    margin 0 auto
    font-size 1.3em
    font-weight bold
    opacity 0.6
    &.homeTitle
      margin-bottom 0.5em

.playOffline
  display flex
  flex-flow column nowrap
  justify-content center
  align-items center
  margin-top 1em
  > .fatButton
    margin 1em

.miniPuzzle
  display flex
  flex-flow column nowrap
  justify-content flex-start
  align-items center
  margin 1em 0

#timeline
  padding 0px
  .timelineEntry
    padding 10px
    font-size 0.9em

.home-playbanInfo
  padding 1em
  text-align center
  > h2
    font-size 1.2em
    margin-top 0.5em
    line-height 2em
  > p
    font-size 0.9em
  > ul
    list-style initial
    margin-left 2em
    text-align left

.corresPoolWrapper
  flex-grow 1
  display flex
  flex-flow column nowrap
  > .corres_create
    flex 0 1 auto
    margin-top 20px
    display flex
    justify-content center

.corres_seeks
  flex 1 1 auto
  text-align left
  font-size 0.8em
  width 100%
  .must_signin
    text-align center
  th, td
    vertical-align middle
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
    &:first-child
      text-align center
      width 30px
  th
    font-weight normal
    padding 1em
  td
    padding 0.5em
    border-bottom 1px solid lighten(#3d3d3d, 10%)

.corres_empty_seeks_list
  flex 1 1 auto
  display flex
  justify-content center
  align-items center

.corres_seek
  &.cancelCorresSeek
    background rgba(green, 0.15)
  &.active
    background rgba(gold, 0.3)

.view-container.light
  .tabs-navigation.homeSetup
    background-color inherit

  .home
    background themeBgLightHeader
    .tabs-view-wrapper
      background-color bglight
      background-image url("data:image/svg+xml;base64,")

    .newGame-pool
      background-color transpWhite04
      border-color borderLightGray
      color inherit
      &.active
        background-color rgba(gold, 0.3)

  .corres_seek
    > td
      border-color borderLightGray


.view-container.transp
  .tabs-navigation.homeSetup
    background-color inherit

  .corres_seek > td
    border-color transpWhite01

  .home
    .newGame-pool
      border-color transpWhite02
      background-color transpWhite005
      &.active
        background-color rgba(gold, 0.2)
